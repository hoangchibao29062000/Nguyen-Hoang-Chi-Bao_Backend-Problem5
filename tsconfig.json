{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "app.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}